<% if item.bookmarked_by?(current_user) %>
  <p>
  <%= link_to item_bookmark_path(item.id), method: :delete, remote: true do %>
  ★<%= item.bookmarks.count %>
  <% end %>
  </p>
  <% else %>
  <p>
  <%= link_to item_bookmarks_path(item.id), method: :post, remote: true do %>
  ☆<%= item.bookmarks.count %>
  <% end %>
  </p>
<% end %>
