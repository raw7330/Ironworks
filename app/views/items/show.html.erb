<div class="container">
<div class="raw">
<div class="col-12">
 <div class="row">
 <div class="col-8 name-drawing">
  <div class="name">
     <%= link_to user_path(@user) do %>
     <%= @user.company_name %>
     <% end %>
  </div>
  <div class="n-drawing">
     <%= attachment_image_tag(@item, :image, size: "700x500", fallback: "no_image.jpg") %>
  </div>
 </div>

 <div class="col-2 detail">
  <div class="item-name">製品名：<%= @item.name %></div>
  <div class="item-genre">ジャンル：<%= @item.genre.name %></div>
  <div class="item-price">価格：<%= @item.price %>円</div>
  <div class="item-delivery">納期：<%= @item.delivery_date %></div>
  <div id="bookmarks_buttons_<%= @item.id %>"><%= render 'bookmarks/bookmark',item:@item %></div>
 </div>
 
 </div>
</div>
</div>

<div class="row">
 <div class="col-4">
 <div id="comments_buttons_<%= @item.id %>"><%= render 'comments/comment',item:@item,comments:@comments,comment:@comment %></div>
 </div>
</div>

</div>