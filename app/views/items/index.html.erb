<div class="container">
  <div><%= search_form_for @q do |f| %>
        <%= f.label :name, "製品名検索" %>
        <%= f.search_field :name_cont %>
        <%= f.submit"検索" %>
       <% end %>
  </div>
  <% @items.each do |item| %>
  <div class="row">
    <div class="col-4">
    <%= link_to item_path(item.id) do %>
    <%= attachment_image_tag(item, :image, size: "200x160", fallback: "no_image.jpg") %>
    <% end %>
    </div>
    <div class="col-6">
      <table class="description">
      <thead>
      <tr>
        <th>製品名</th>
        <th>ジャンル</th>
        <th>価格</th>
        <th>納期</th>
        <th></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <tb><%= item.name %></tb>
        <tb><%= item.genre.name %></tb>
        <tb><%= item.price %>円</tb>
        <tb><%= item.delivery_date %></tb>
        <tb><% if item.user = current_user %>
            <%= link_to "編集", edit_item_path(item) %>
            <% end %>
        </tb>
        <tb><% if item.user = current_user %>
            <%= link_to "削除", item_path(item), method: :delete %>
            <% end %>
        </tb>
      </tr>
      </tbody>
      </table>
    </div>

  </div>
  <% end %>
  <%= paginate (@items) %>
</div>