<h2>コメント</h2>
 <div class="comments">
  <% comments.each do |comment| %>
  <div class="row">
  <div class="col-12"><%= comment.user.company_name %></div>
  <div class="col-5"><%= comment.comment %></div>
  <div class="col-3"><%= link_to "削除", item_comment_path(item, comment), method: :delete, remote: true %></div>
  </div>
  <% end %>
 </div>

 <div class="row">
 <div><%=flash[:notice] %></div>
 <div><%=flash[:alert] %></div>
 <div>
   <%= form_with(model:[item, comment], remote: true) do |f| %>
    <%= f.text_area :comment %>
    <%= f.submit "送信する" %>
   <% end %>
 </div>
