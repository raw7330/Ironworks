<div class="container">
<div><%=flash[:notice] %></div>
    <div class="row">
    <% if @user == current_user %>
    <h1>マイページ</h1>
    <% else %>
    <h1>ユーザー詳細</h1>
    <% end %>
    </div>

    <div class="row">
    <table>
     <tbody>
      <tr>
        <th>会社名</th>
        <th><%= @user.company_name %></th>
      </tr>
      <tr>
        <th>カナ</th>
        <th><%= @user.company_name_kana %></th>
      </tr>
      <tr>
        <th>郵便番号</th>
        <th><%= @user.postal_code %></th>
      </tr>
      <tr>
        <th>住所</th>
        <th><%= @user.address %></th>
      </tr>
      <tr>
        <th></th>
      　<th class="text-right">
      　     <% if @user == current_user %>
      　     <%= link_to "編集", edit_user_path(@user), class: "btn btn-success px-4" %>
      　     <% end %>
      　</th>
      </tr>
     </tbody>
    </table>
    </div>

    <div class="row">
     <div class="col-5 text-right">
     <font size="4">
       <% if @user == current_user %>
       <%= link_to "ブックマーク一覧", item_bookmarks_path(@item) %>
       <% end %>
      </font>
     </div>
    </div>
</div>


<div class="container">
<h2>投稿一覧</h2>
<div class="row">
    <% @item.each do |item| %>
    <div class="drawing-box col-7">
       <div class="drawing">
        <div>
            <%= link_to item_path(item.id) do %>
            <%= attachment_image_tag(item, :image, size: "200x160", fallback: "no_image.jpg") %>
            <% end %>
        </div>
        <div><%= item.name %></div>
        <div><%= item.genre.name %></div>
        <div><%= item.price %>円</div>
        <div><%= item.delivery_date %></div>

        <div><% if item.user == current_user %>
            <%= link_to "編集", edit_item_path(item) %>
            <% end %>
        </div>
        <div><% if item.user == current_user %>
            <%= link_to "削除", item_path(item), method: :delete %>
            <% end %>
        </div>
       </div>
    </div>
    <% end %>
</div>
</div>
